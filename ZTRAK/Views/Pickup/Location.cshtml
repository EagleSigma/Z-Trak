@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="panel panel-primary">

    <div data-bind="attr: {id: ID, 'data-owner': CreatedBy, 'data-team': Team, 'data-status': Status }" class="cali">

        @*Pickup Number and Date Created*@
        <div class="row">
            <div>
                <div class="col-xs-12"><span class="pickup-item-headers cali2" data-bind="text: ID" />ADD NEW LOCATION:</div>
            </div>
        </div>
    </div>


    <div class="panel-body" style="padding: 0;">

        <!-- PICKUP INFO-->
        <div class="container-fluid">

            @*Location*@
            <div class="row">

                <div class="col-xs-12" style="padding-left: 0; padding-right: 0">
                    <span class="location-name-background ">
                        <input style="max-width:100%; text-align:left; margin: 0; padding: 0; padding-left: 5px;" type="text" class="zfm-input inputEdit ios"  placeholder="Name" data-bind="value: LocationName" />
                    </span>
                </div>
            </div>

            @*Address*@
            <div class="row" style="border-top: 2px solid darkGray">

                <div class="col-xs-12" style="padding-left: 0; padding-right: 0">
                    <span class="location-name-background ">
                        <input style="max-width: 100%; text-align: left; margin: 0; padding: 0; padding-left: 5px; " type="text" class="zfm-input inputEdit ios" placeholder="Address" />
                    </span>
                </div>
            </div>

            @*City, State and State*@
            <div class="row" style="padding-left: 2px; padding-right:2px">

                <div class="col-xs-8" style="padding-left: 3px; padding-right: 3px;">
                    <input data-provide="typeahead" class=" zfm-input2 pickup-item-headers-2 ios" data-toggle="tooltip" title="City" placeholder="City" />
                </div>
                <div class="col-xs-2" style="padding-left: 3px; padding-right: 3px;">
                    <input class="warehouse-typeahead zfm-input2 pickup-item-headers-2 ios" data-toggle="tooltip" title="State" placeholder="State" />
                </div>
                <div class="col-xs-2" style="padding-left: 3px; padding-right: 3px;">
                    <input class="status-typeahead zfm-input2 pickup-item-headers-2 ios"  data-toggle="tooltip" title="Zip" placeholder="Zip" />
                </div>
            </div>

            @*Latitude, Longitude*@ 
            <div class="row" style="padding-left: 2px; padding-right: 2px; background-color: #f5f5f5;">
                <div class="col-xs-6" style="padding-left: 3px; padding-right: 3px; ">
                    <input type="text" class="zfm-input2 pickup-item-headers-2 ios" placeholder="Latitude" data-toggle="tooltip" title="Latitude" />
                </div>
               
                <div class="col-xs-6" style="padding-left: 3px; padding-right: 3px;">
                    <input type="text" class="zfm-input2 pickup-item-headers-2 ios" placeholder="Longitude" data-toggle="tooltip" title="Longitude" />
                </div>
            </div>


            @*Notes*@
            <div class="row" style="padding-left: 2px; padding-right: 2px; padding-top: 5px; background-color: #f5f5f5; border-top: 2px solid darkGray; border-bottom: 5px solid #f5f5f5; ">
                <div class="col-xs-12" style="padding-left: 3px; padding-right: 3px;">
                    <textarea id="zfmNotes" rows="1" class="ios" placeholder="Notes" data-toggle="tooltip" title="Notes" > </textarea>
                </div>
            </div>         
        </div>


        <div class="panel-footer">

            <div class="btn-group">
                <button class="btn btn-default btn-success zfm-update" data-toggle="tooltip" title="Update Pickup"><i class="fa fa-fw fa-save"></i></button>
                <button class="btn btn-default zfm-addItem" data-toggle="tooltip" title="Add Item"><i class="fa fa-fw fa-plus"></i></button>
                <button class="btn btn-default zfm-cancel" data-toggle="tooltip" title="Cancel Changes or New Pickup"><i class="fa fa-fw fa-thumbs-o-down"></i></button>
            </div>

        </div>

    </div>
</div>